// RUN: circt-verilog-lsp-server -lit-test < %s | FileCheck %s
// REQUIRES: slang
// UNSUPPORTED: valgrind
// Test auto-completion functionality for keywords, signals, and module names.
{"jsonrpc":"2.0","id":0,"method":"initialize","params":{"processId":123,"rootPath":"verilog","capabilities":{},"trace":"off"}}
// -----
{"jsonrpc":"2.0","method":"textDocument/didOpen","params":{"textDocument":{
  "uri":"test:///completion.sv",
  "languageId":"verilog",
  "version":1,
  "text":"module test_mod (\n  input  logic clk,\n  input  logic rst,\n  output logic [7:0] data_out\n);\n  logic [7:0] counter;\n  logic [7:0] data_reg;\n  \n  always_ff @(posedge clk) begin\n    if (rst)\n      counter <= 0;\n    else\n      counter <= counter + 1;\n  end\n  \n  assign data_out = \nendmodule"
}}}
// -----
// Request completion at position after "data_out = " (should suggest signals)
{"jsonrpc":"2.0","id":1,"method":"textDocument/completion","params":{
  "textDocument":{"uri":"test:///completion.sv"},
  "position":{"line":15,"character":20}
}}
// CHECK:       "id": 1,
// CHECK-NEXT:  "jsonrpc": "2.0",
// CHECK-NEXT:  "result": {
// CHECK:         "isIncomplete": false,
// CHECK:         "items": [
// Should include keywords
// CHECK:           "label": "always"
// Should include module signals
// CHECK:           "label": "counter"
// CHECK:           "label": "data_reg"
// -----
// Request completion with prefix "al" (should filter to always keywords)
{"jsonrpc":"2.0","id":2,"method":"textDocument/completion","params":{
  "textDocument":{"uri":"test:///completion.sv"},
  "position":{"line":8,"character":4}
}}
// CHECK:       "id": 2,
// CHECK-NEXT:  "jsonrpc": "2.0",
// CHECK-NEXT:  "result": {
// Should include always_ff snippet
// CHECK:         "always_ff (snippet)"
// -----
// Test module instantiation completion
{"jsonrpc":"2.0","method":"textDocument/didOpen","params":{"textDocument":{
  "uri":"test:///instantiation.sv",
  "languageId":"verilog",
  "version":1,
  "text":"module top;\n  \nendmodule\n\nmodule child(\n  input clk,\n  output data\n);\nendmodule"
}}}
// -----
{"jsonrpc":"2.0","id":3,"method":"textDocument/completion","params":{
  "textDocument":{"uri":"test:///instantiation.sv"},
  "position":{"line":1,"character":2}
}}
// CHECK:       "id": 3,
// CHECK-NEXT:  "jsonrpc": "2.0",
// CHECK-NEXT:  "result": {
// Should include module definitions for instantiation
// CHECK:         "module definition"
// -----
{"jsonrpc":"2.0","id":99,"method":"shutdown"}
// -----
{"jsonrpc":"2.0","method":"exit"}
