// RUN: circt-verilog-lsp-server -lit-test < %s | FileCheck %s
// REQUIRES: slang
// UNSUPPORTED: valgrind
// Test LSP functionality for user-defined types (typedef, enum, struct).
{"jsonrpc":"2.0","id":0,"method":"initialize","params":{"processId":123,"rootPath":"verilog","capabilities":{"textDocument":{"documentSymbol":{"hierarchicalDocumentSymbolSupport":true}}},"trace":"off"}}
// -----
{"jsonrpc":"2.0","method":"textDocument/didOpen","params":{"textDocument":{
  "uri":"test:///types.sv",
  "languageId":"verilog",
  "version":1,
  "text":"package types_pkg;\n  typedef enum logic [2:0] {\n    IDLE   = 3'b000,\n    READ   = 3'b001,\n    WRITE  = 3'b010,\n    DONE   = 3'b011\n  } state_e;\n  \n  typedef struct packed {\n    logic [7:0]  data;\n    logic        valid;\n    logic        last;\n  } packet_t;\n  \n  typedef logic [31:0] word_t;\nendpackage\n\nmodule fsm\n  import types_pkg::*;\n(\n  input  logic     clk,\n  input  logic     rst_n,\n  output state_e   state,\n  output packet_t  packet\n);\n  state_e current_state;\n  state_e next_state;\n  \n  always_ff @(posedge clk) begin\n    if (!rst_n)\n      current_state <= IDLE;\n    else\n      current_state <= next_state;\n  end\n  \n  assign state = current_state;\nendmodule"
}}}
// -----
// Document symbols should include package and module
{"jsonrpc":"2.0","id":1,"method":"textDocument/documentSymbol","params":{
  "textDocument":{"uri":"test:///types.sv"}
}}
