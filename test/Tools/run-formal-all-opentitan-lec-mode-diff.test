// RUN: printf '#!/usr/bin/env python3\nimport os,sys\nif os.environ.get(\"CIRCT_VERILOG\") != \"%t/fake-circt-verilog-opentitan\":\n  print(\"bad_CIRCT_VERILOG=\" + str(os.environ.get(\"CIRCT_VERILOG\")))\n  sys.exit(9)\nout = os.environ.get(\"OUT\", \"\")\nif not out:\n  print(\"missing_OUT\")\n  sys.exit(8)\nworkdir = \"\"\nargs = sys.argv[1:]\nfor i, arg in enumerate(args):\n  if arg == \"--workdir\" and i + 1 < len(args):\n    workdir = args[i + 1]\nmode = os.environ.get(\"LEC_MODE_LABEL\", \"LEC\")\nos.makedirs(os.path.dirname(out), exist_ok=True)\nwith open(out, \"w\", encoding=\"utf-8\") as f:\n  f.write(\"PASS\\taes_sbox_canright\\t\" + workdir + \"/aes_sbox_canright\\topentitan\\t\" + mode + \"\\n\")\n  if mode == \"LEC_STRICT\":\n    f.write(\"FAIL\\taes_sbox_lut\\t\" + workdir + \"/aes_sbox_lut#XPROP_ONLY\\topentitan\\t\" + mode + \"\\n\")\n  else:\n    f.write(\"PASS\\taes_sbox_lut\\t\" + workdir + \"/aes_sbox_lut\\topentitan\\t\" + mode + \"\\n\")\nprint(\"Running LEC on 2 AES S-Box implementation(s)...\")\nif mode == \"LEC_STRICT\":\n  print(\"LEC failures: 1\")\n  sys.exit(1)\nprint(\"LEC completed successfully.\")\nsys.exit(0)\n' > %t/utils/run_opentitan_circt_lec.py
