// RUN: rm -rf %t
// RUN: mkdir -p %t/bin %t/src
// RUN: touch %t/src/a.sv
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nout=""\nwhile [[ $# -gt 0 ]]; do\n  case "$1" in\n    -o) out="$2"; shift 2 ;;\n    *) shift ;;\n  esac\ndone\n: "${out:?}"\nprintf "dummy\\n" > "$out"\nexit 0\n' > %t/bin/circt-verilog
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nstate="%t/bmc.state"\ncount=0\nif [[ -f "$state" ]]; then\n  count="$(cat "$state")"\nfi\ncount=$((count + 1))\necho "$count" > "$state"\nrss=""\nfor a in "$@"; do\n  case "$a" in\n    --max-rss-mb=*) rss="${a#*=}" ;;\n  esac\ndone\nif [[ "$count" -eq 1 ]]; then\n  [[ -z "$rss" ]] || { echo "unexpected rss on first run: $rss" >&2; exit 1; }\n  echo "error: resource guard triggered: RSS 11000 MB exceeded limit 10240 MB (phase: run z3)." >&2\n  exit 1\nfi\nif [[ "$rss" != "24576" ]]; then\n  echo "expected --max-rss-mb=24576 on retry, got ${rss}" >&2\n  exit 1\nfi\necho "BMC_RESULT=UNSAT"\nexit 0\n' > %t/bin/circt-bmc
// RUN: chmod +x %t/bin/circt-verilog %t/bin/circt-bmc
// RUN: printf 'retry_case\ttop\t%t/src/a.sv\t%t/src\t%t/work/retry\n' > %t/cases.tsv
// RUN: env CIRCT_VERILOG=%t/bin/circt-verilog CIRCT_BMC=%t/bin/circt-bmc CIRCT_BMC_ARGS=--resource-guard BMC_RUN_SMTLIB=0 BMC_PREPARE_CORE_WITH_CIRCT_OPT=0 BMC_AUTO_RELAX_RESOURCE_GUARD=1 BMC_AUTO_RELAX_RESOURCE_GUARD_MAX_RSS_MB=24576 BMC_LAUNCH_EVENTS_OUT=%t/launch-events.tsv OUT=%t/results.tsv %S/../../utils/run_pairwise_circt_bmc.py --cases-file %t/cases.tsv --workdir %t/work > %t/run.log
// RUN: FileCheck %s --check-prefix=LOG < %t/run.log
// RUN: FileCheck %s --check-prefix=RES < %t/results.tsv
// RUN: FileCheck %s --check-prefix=LAUNCH < %t/launch-events.tsv
