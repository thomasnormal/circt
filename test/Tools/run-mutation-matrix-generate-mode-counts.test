// RUN: rm -rf %t && mkdir -p %t
// RUN: printf 'module top; endmodule\n' > %t/design.il
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nscript="${@: -1}"\nwhile IFS= read -r line; do\n  out=$(sed -n "s/.*-o \\\"\\([^\\\"]*\\)\\\".*/\\1/p" <<< "$line")\n  mode=$(sed -n "s/.*-mode \\([^ ]*\\).*/\\1/p" <<< "$line")\n  count=$(sed -n "s/.*mutate -list \\([0-9][0-9]*\\).*/\\1/p" <<< "$line")\n  if [[ "$mode" == "inv" ]]; then\n    [[ "$count" == "1" ]] || exit 4\n    echo "10 M_INV" > "$out"\n  elif [[ "$mode" == "const0" ]]; then\n    [[ "$count" == "1" ]] || exit 5\n    echo "11 M_CONST0" > "$out"\n  elif [[ "$mode" == "const1" ]]; then\n    [[ "$count" == "1" ]] || exit 6\n    echo "12 M_CONST1" > "$out"\n  elif [[ "$mode" == "cnot0" ]]; then\n    [[ "$count" == "1" ]] || exit 7\n    echo "20 M_CNOT0" > "$out"\n  else\n    exit 3\n  fi\ndone < <(grep "^mutate -list " "$script")\n' > %t/fake-yosys.sh
// RUN: chmod +x %t/fake-yosys.sh
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nwhile [[ $# -gt 0 ]]; do\n  case "$1" in\n    -o) out="$2"; shift 2 ;;\n    -d) design="$2"; shift 2 ;;\n    *) shift ;;\n  esac\ndone\ncp "$design" "$out"\n' > %t/fake-create-mutated.sh
// RUN: chmod +x %t/fake-create-mutated.sh
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nif [[ \"${BASELINE:-0}\" == \"1\" ]]; then\n  echo SURVIVED > result.txt\nelse\n  echo DETECTED > result.txt\nfi\n' > %t/fake-test.sh
// RUN: chmod +x %t/fake-test.sh
// RUN: printf 't\tbash %t/fake-test.sh\tresult.txt\t^DETECTED$\t^SURVIVED$\n' > %t/tests.tsv
// RUN: printf 'lane1\t%t/design.il\t-\t%t/tests.tsv\t-\t-\t90\t4\t-\t-\t%t/fake-yosys.sh\t-\t-\tarith,control\n' > %t/lanes.tsv

// RUN: %S/../../utils/run_mutation_matrix.sh --lanes-tsv %t/lanes.tsv --out-dir %t/out --create-mutated-script %t/fake-create-mutated.sh --default-mutations-mode-counts arith=3,control=1 2>&1 | FileCheck %s --check-prefix=LOG
// RUN: FileCheck %s --check-prefix=RESULTS < %t/out/results.tsv
