// RUN: touch %t/src/a.sv
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nout=\"\"\nwhile [[ $# -gt 0 ]]; do\n  case \"$1\" in\n    -o) out=\"$2\"; shift 2 ;;\n    *) shift ;;\n  esac\ndone\n: \"${out:?}\"\ncat > \"$out\" <<\"MLIR\"\nmodule {\n  hw.module @top(in clk_a, in clk_b_marker) {\n    verif.assert ASSERT_TRUE\n    verif.cover COVER_TRUE\n    verif.cover COVER_FALSE\n    hw.output\n  }\n}\nMLIR\nexit 0\n' > %t/bin/circt-verilog
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nallow=0\nmlir=\"\"\nfor a in \"$@\"; do\n  [[ \"$a\" == \"--allow-multi-clock\" ]] && allow=1\n  if [[ -f \"$a\" ]]; then\n    mlir=\"$a\"\n  fi\ndone\n: \"${mlir:?}\"\nif grep -q \"clk_b_marker\" \"$mlir\"; then\n  if [[ \"$allow\" != \"1\" ]]; then\n    echo \"$mlir:1:1: error: modules with multiple clocks not yet supported\" >&2\n    exit 1\n  fi\nfi\nif [[ \"$mlir\" == *\".cover-\"* ]]; then\n  if grep -q \"verif.cover COVER_TRUE\" \"$mlir\"; then\n    echo \"BMC_RESULT=SAT\"\n    exit 0\n  fi\n  echo \"BMC_RESULT=UNSAT\"\n  exit 0\nfi\necho \"BMC_RESULT=UNSAT\"\nexit 0\n' > %t/bin/circt-bmc
