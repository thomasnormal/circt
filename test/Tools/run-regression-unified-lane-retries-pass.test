// RUN: rm -rf %t
// RUN: mkdir -p %t
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nseen="%t/seen"\nif [[ ! -f "$seen" ]]; then touch "$seen"; exit 9; fi\nexit 0\n' > %t/flaky.sh
// RUN: chmod +x %t/flaky.sh
// RUN: printf 'suite_retry\tsmoke\t%t/flaky.sh\t-\n' > %t/manifest.tsv

// RUN: %S/../../utils/run_regression_unified.sh --manifest %t/manifest.tsv --profile smoke --engine circt --lane-retries 1 --out-dir %t/out > %t/log.txt
// RUN: FileCheck %s --check-prefix=LOG < %t/log.txt
// RUN: FileCheck %s --check-prefix=SUMMARY < %t/out/summary.tsv
// RUN: FileCheck %s --check-prefix=RETRY < %t/out/retry-summary.tsv

// LOG: selected=1 failures=0
// LOG: lane_retries=1

// SUMMARY: {{^suite_id[[:space:]]+engine[[:space:]]+status[[:space:]]+exit_code[[:space:]]+elapsed_sec[[:space:]]+log$}}
// SUMMARY: {{^suite_retry[[:space:]]+circt[[:space:]]+PASS[[:space:]]+0[[:space:]]+[0-9]+[[:space:]]+.*suite_retry\.circt\.log$}}

// RETRY: {{^suite_id[[:space:]]+engine[[:space:]]+attempts[[:space:]]+retries_used[[:space:]]+status[[:space:]]+exit_code$}}
// RETRY: {{^suite_retry[[:space:]]+circt[[:space:]]+2[[:space:]]+1[[:space:]]+PASS[[:space:]]+0$}}
