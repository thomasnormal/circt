// RUN: rm -rf %t && mkdir -p %t
// RUN: printf 'module top; endmodule\n' > %t/design.il
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nscript="${@: -1}"\nout=$(sed -n "s/.*-o \"\([^\"]*\)\".*/\1/p" "$script" | tail -n1)\nmode=$(sed -n "s/.*-mode \([^ ]*\).*/\1/p" "$script" | tail -n1)\nif [[ "$mode" == "arith" ]]; then\n  echo "10 M_ARITH_1" > "$out"\n  echo "11 M_ARITH_2" >> "$out"\nelif [[ "$mode" == "control" ]]; then\n  echo "20 M_CTRL_1" > "$out"\n  echo "21 M_CTRL_2" >> "$out"\nelse\n  echo "30 M_DEFAULT" > "$out"\nfi\n' > %t/fake-yosys.sh
