// RUN: rm -rf %t
// RUN: mkdir -p %t/utils %t/sv-tests %t/verilator %t/yosys
// RUN: cp %S/../../utils/run_formal_all.sh %t/utils/run_formal_all.sh
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\n: "${OUT:?}"\n: "${BMC_LAUNCH_EVENTS_OUT:?}"\nreason="${BMC_REASON:-retryable_exit_code_126}"\ncount="${BMC_EVENT_COUNT:-1}"\nmkdir -p "$(dirname "$OUT")"\nprintf "PASS\\tcase_launch\\t/tests/case_launch.sv\\n" > "$OUT"\n: > "$BMC_LAUNCH_EVENTS_OUT"\nfor ((i=0; i<count; ++i)); do\n  printf "RETRY\\tcase_launch\\t/tests/case_launch.sv\\tfrontend\\t/fake/circt-verilog\\t%%%%s\\t1\\t0.000\\t126\\t\\n" "$reason" >> "$BMC_LAUNCH_EVENTS_OUT"\ndone\necho "sv-tests SVA summary: total=1 pass=1 fail=0 xfail=0 xpass=0 error=0 skip=0 unknown=0 timeout=0"\n' > %t/utils/run_sv_tests_circt_bmc.sh
// RUN: chmod +x %t/utils/run_formal_all.sh %t/utils/run_sv_tests_circt_bmc.sh
// RUN: cd %t && BMC_REASON=retryable_exit_code_126 BMC_EVENT_COUNT=1 utils/run_formal_all.sh --out-dir %t/out-base --sv-tests %t/sv-tests --verilator %t/verilator --yosys %t/yosys --include-lane-regex '^sv-tests/BMC$' --sv-tests-bmc-tag-regex 'tag_bmc' --sv-tests-bmc-test-filter 'case_launch' --baseline-file %t/formal-baselines.tsv --update-baselines
// RUN: not sh -c 'cd %t && BMC_REASON=retryable_exit_code_126 BMC_EVENT_COUNT=1 utils/run_formal_all.sh --out-dir %t/out-any --sv-tests %t/sv-tests --verilator %t/verilator --yosys %t/yosys --include-lane-regex "^sv-tests/BMC$" --sv-tests-bmc-tag-regex "tag_bmc" --sv-tests-bmc-test-filter "case_launch" --baseline-file %t/formal-baselines.tsv --fail-on-any-bmc-launch-reason-events' 2>&1 | FileCheck %s --check-prefix=ANY
// RUN: printf "exact:retryable_exit_code_126\n" > %t/bmc-launch-allowlist.txt
// RUN: cd %t && BMC_REASON=retryable_exit_code_126 BMC_EVENT_COUNT=1 utils/run_formal_all.sh --out-dir %t/out-allow --sv-tests %t/sv-tests --verilator %t/verilator --yosys %t/yosys --include-lane-regex '^sv-tests/BMC$' --sv-tests-bmc-tag-regex 'tag_bmc' --sv-tests-bmc-test-filter 'case_launch' --baseline-file %t/formal-baselines.tsv --fail-on-any-bmc-launch-reason-events --bmc-launch-reason-key-allowlist-file %t/bmc-launch-allowlist.txt
// RUN: not sh -c 'cd %t && BMC_REASON=retryable_exit_code_127 BMC_EVENT_COUNT=3 utils/run_formal_all.sh --out-dir %t/out-max --sv-tests %t/sv-tests --verilator %t/verilator --yosys %t/yosys --include-lane-regex "^sv-tests/BMC$" --sv-tests-bmc-tag-regex "tag_bmc" --sv-tests-bmc-test-filter "case_launch" --baseline-file %t/formal-baselines.tsv --max-bmc-launch-reason-event-rows 2' 2>&1 | FileCheck %s --check-prefix=MAX
//
// ANY: strict gate failures:
// ANY: sv-tests BMC: non-allowlisted bmc_launch_reason_*_events must be zero
// MAX: strict gate failures:
// MAX: sv-tests BMC: non-allowlisted bmc_launch_reason_*_events exceeds max
