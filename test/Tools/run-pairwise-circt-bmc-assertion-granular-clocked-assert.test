// RUN: rm -rf %t
// RUN: mkdir -p %t/bin %t/src
// RUN: touch %t/src/a.sv
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nout=""\nwhile [[ $# -gt 0 ]]; do\n  case "$1" in\n    -o) out="$2"; shift 2 ;;\n    *) shift ;;\n  esac\ndone\n: "${out:?}"\ncat > "$out" <<"MLIR"\nmodule {\n  hw.module @top() {\n    %c1 = hw.constant true\n    %clk = hw.constant true\n    verif.assert %c1 : i1\n    verif.clocked_assert %c1, posedge %clk : i1\n    hw.output\n  }\n}\nMLIR\nexit 0\n' > %t/bin/circt-verilog
// RUN: printf '#!/usr/bin/env bash\nset -euo pipefail\nmlir=""\nfor arg in "$@"; do\n  if [[ -f "$arg" ]]; then\n    mlir="$arg"\n  fi\ndone\n: "${mlir:?}"\nif grep -q "verif.clocked_assert" "$mlir"; then\n  echo "BMC_RESULT=SAT"\n  exit 0\nfi\necho "BMC_RESULT=UNSAT"\nexit 0\n' > %t/bin/circt-bmc
// RUN: chmod +x %t/bin/circt-verilog %t/bin/circt-bmc
// RUN: printf 'case0\ttop\t%t/src/a.sv\t%t/src\t%t/work/case0\n' > %t/cases.tsv
// RUN: env CIRCT_VERILOG=%t/bin/circt-verilog CIRCT_BMC=%t/bin/circt-bmc BMC_RUN_SMTLIB=0 BMC_PREPARE_CORE_WITH_CIRCT_OPT=0 OUT=%t/results.tsv %S/../../utils/run_pairwise_circt_bmc.py --cases-file %t/cases.tsv --workdir %t/work --assertion-granular --assertion-shard-count 2 --assertion-shard-index 0 --assertion-results-file %t/assertions.tsv | FileCheck %s --check-prefix=LOG
// RUN: FileCheck %s --check-prefix=RES < %t/results.tsv
// RUN: FileCheck %s --check-prefix=ASSERT < %t/assertions.tsv
//
// LOG: pairwise BMC assertion-granular summary: assertions=1
// LOG: pairwise BMC summary: total=1 pass=1 fail=0 xfail=0 xpass=0 error=0 skip=0 unknown=0 timeout=0
// RES: PASS{{[[:space:]]+}}case0{{[[:space:]]+}}{{.*}}work/case0{{[[:space:]]+}}pairwise{{[[:space:]]+}}BMC{{[[:space:]]+}}UNSAT
// ASSERT: PROVEN{{[[:space:]]+}}case0{{[[:space:]]+}}{{.*}}line_{{[0-9]+}}{{[[:space:]]+}}UNSAT{{[[:space:]]+}}unsat
