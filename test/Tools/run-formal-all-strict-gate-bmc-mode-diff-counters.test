// RUN: rm -rf %t
// RUN: mkdir -p %t/utils %t/sv-tests %t/verilator %t/yosys %t/opentitan
// RUN: cp %S/../../utils/run_formal_all.sh %t/utils/run_formal_all.sh
// RUN: printf '#!/usr/bin/env bash\nexit 0\n' > %t/fake-circt-verilog-opentitan
// RUN: printf '#!/usr/bin/env python3\nimport os,sys\nout = os.environ.get("OUT", "")\nif not out:\n  sys.exit(8)\nmode = os.environ.get("BMC_MODE_LABEL", "BMC")\nassume_known = os.environ.get("BMC_ASSUME_KNOWN_INPUTS", "")\nif mode == "BMC" and assume_known != "0":\n  print("bad_BMC_ASSUME_KNOWN_INPUTS_default=" + assume_known)\n  sys.exit(7)\nif mode == "BMC_STRICT" and assume_known != "1":\n  print("bad_BMC_ASSUME_KNOWN_INPUTS_strict=" + assume_known)\n  sys.exit(6)\nin_base = "/out-base/" in out\nworkdir = ""\nargs = sys.argv[1:]\nfor i, arg in enumerate(args):\n  if arg == "--workdir" and i + 1 < len(args):\n    workdir = args[i + 1]\nos.makedirs(os.path.dirname(out), exist_ok=True)\nif in_base:\n  default_rows = [("PASS", "sf1"), ("FAIL", "sp1"), ("FAIL", "sd1"), ("PASS", "ms1")]\n  strict_rows = [("FAIL", "sf1"), ("PASS", "sp1"), ("ERROR", "sd1"), ("FAIL", "ml1")]\nelse:\n  default_rows = [("PASS", "sf1"), ("PASS", "sf2"), ("FAIL", "sp1"), ("FAIL", "sp2"), ("FAIL", "sd1"), ("XFAIL", "sd2"), ("PASS", "ms1"), ("PASS", "ms2")]\n  strict_rows = [("FAIL", "sf1"), ("XFAIL", "sf2"), ("PASS", "sp1"), ("PASS", "sp2"), ("ERROR", "sd1"), ("UNKNOWN", "sd2"), ("FAIL", "ml1"), ("FAIL", "ml2")]\nrows = strict_rows if mode == "BMC_STRICT" else default_rows\nwith open(out, "w", encoding="utf-8") as f:\n  for status, base in rows:\n    detail = workdir + "/" + base\n    f.write(status + "\\t" + base + "\\t" + detail + "\\topentitan\\t" + mode + "\\n")\nif any(status != "PASS" for status, _ in rows):\n  print("BMC failures: 1")\n  sys.exit(1)\nprint("BMC completed successfully.")\nsys.exit(0)\n' > %t/utils/run_opentitan_circt_bmc.py
// RUN: chmod +x %t/utils/run_formal_all.sh %t/utils/run_opentitan_circt_bmc.py %t/fake-circt-verilog-opentitan
